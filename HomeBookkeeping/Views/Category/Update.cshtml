@using Application.Common.Models;
@model CategoryGetDto

@{
    ViewData["Title"] = "Update Category";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Category</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Category Name</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpenceIncomeType">Type</label>
                        <select id="type" asp-for="ExpenceIncomeType" class="form-control">
                            <option value="">-- Please select an option --</option>
                            <option value="Income">Income</option>
                            <option value="Expence">Expence</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>